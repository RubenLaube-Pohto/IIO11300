<Window x:Class="Tehtava8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava8"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="420">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="180">
                <Button x:Name="btnGet_Clients" Content="Hae asiakkaat"/>
                <ListBox x:Name="lbClients" ItemsSource="{Binding}"/>
            </StackPanel>
            <StackPanel Width="179" Margin="10,0,0,0">
                <TextBlock>Etunimi:</TextBlock>
                <TextBox x:Name="txtFirstName" Background="LightCoral"/>
                <TextBlock>Sukunimi:</TextBlock>
                <TextBox x:Name="txtLastName" Background="LightCoral"/>
                <TextBlock>Osoite:</TextBlock>
                <TextBox x:Name="txtAddress" Background="LightCoral"/>
                <TextBlock>Kaupunki:</TextBlock>
                <TextBox x:Name="txtCity" Background="LightCoral"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
